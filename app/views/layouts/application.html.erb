<!DOCTYPE html>
<html>
  <head>
    <title>Githubappstest</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <!-- navbar -->
    <div class='navbar'>
      <ul>
        <li><%= link_to 'Home', root_path %></li>
        <li><%= link_to 'Installations', installations_path %></li>
        <% if current_user.present? %>
          <li><%= link_to 'Add new repo', select_repos_path %></li>
          <li><%= link_to 'Sign Out', user_path(current_user), method: :delete %></li>
        <% end %>
      </ul>
    </div>
    <!-- navbar -->

    <!-- notification -->
    <% if flash[:notice].present? %>
      <div class='notify notice'><%= flash[:notice] %></div>
    <% end %>

    <% if flash[:alert].present? %>
      <div class='notify alert'><%= flash[:alert] %></div>
    <% end %>
    <!-- notification -->

    <%= yield %>
  </body>
</html>
